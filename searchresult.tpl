[searchposts]
[fullresult]
<div class="card">
<div class="post-card">
<div class="row">
<div class="col-md-4"><div class="post-card-image" style="margin:0 0"><a href="{full-link}"><img src="{image-1}" alt="img"></a></div></div>
<div class="col-md-8">
<div class="post-card-content">
<a href="{category-url}" class="categorie"> {category}</a>
<h5><a href="{full-link}">{title}</a></h5>
<p>{short-story limit="150"}</p>
<div class="post-card-info">
<ul class="list-inline">
<li>[profile]<img src="{foto}" alt="{login}">[/profile]</li>
<li>[profile]{login}[/profile]</li>
<li class="dot"></li>
<li>{date}</li>
</ul>
</div></div></div></div></div></div>
[/fullresult]
